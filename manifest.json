{
    "manifest_version": 3,
    "name": "Persistent GIFs",
    "version": "1.0",
    "description": "GIFs persist forever across all tabs until Chrome is closed.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["gifs/*.gif"],
            "matches": ["<all_urls>"]
        }
    ]
}
