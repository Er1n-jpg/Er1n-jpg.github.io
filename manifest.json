{
    "manifest_version": 3,
    "name": "Persistent Random GIFs",
    "version": "1.0",
    "description": "Shows random GIFs across the entire Chrome window.",
    "permissions": ["storage", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["gifs/*.gif"],
            "matches": ["<all_urls>"]
        }
    ]
}
