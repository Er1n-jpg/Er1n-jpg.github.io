{
    "manifest_version": 3,
    "name": "Persistent GIFs",
    "version": "1.0",
    "permissions": ["storage", "scripting", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}